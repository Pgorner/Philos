NAME = philo

CC		 = cc
CFLAGS   = -g -Wall -Werror -Wextra -pthread -fsanitize=thread
AR		 = ar rcs
RM		 = rm -rf

SRC =		action.c		\
			checker.c		\
			init.c			\
			input.c			\
			main.c			\
			time.c			\
			utils.c			\
		

OBJS =		$(SRC:.c=.o)


$(NAME):	$(OBJS)
			$(CC) $(CFLAGS) $(LINK_FLAGS) $(OBJS) -o $(NAME)

all :		$(NAME)

clean :
			$(RM) $(OBJS)

fclean :	clean
			@$(RM) $(NAME)

re :		fclean all
